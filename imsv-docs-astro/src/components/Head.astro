---
/* https://github.com/withastro/starlight/discussions/1106#discussioncomment-7636004 */
import type { Props } from '@astrojs/starlight/props';
import Default from '@astrojs/starlight/components/Head.astro';
import { getImage } from "astro:assets";
import socialImg from '@assets/card-whoosh-600.png';
import { siteBaseUrl } from '../../astro.config.mjs';
// social image needs to be absolute url
const imgUrl = new URL(siteBaseUrl);
imgUrl.pathname = (await getImage({src: socialImg, format: 'png'})).src;
---
<meta property="og:image" content={imgUrl.href} />
<meta name="twitter:image" content={imgUrl.href} />
<Default {...Astro.props}><slot /></Default>
